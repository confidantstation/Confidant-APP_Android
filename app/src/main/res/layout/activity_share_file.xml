<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">
    <View
        android:id="@+id/statusBar"
        android:background="@color/headmainColor"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:background="@color/headmainColor"
        android:minHeight="?attr/actionBarSize"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/llCancel"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/statusbar_close"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="title"
            android:textColor="@color/mainColor"
            android:textSize="@dimen/commemTextSize" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/ivFileType"
        android:layout_width="50dp"
        android:src="@mipmap/doc_pdf"
        android:layout_marginTop="27dp"
        android:layout_height="50dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvFileName"
            android:textSize="17sp"
            android:textColor="@color/main_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/tvFileSize"
        android:textColor="@color/color_9496a1"
        android:textSize="13sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="32dp"
        android:background="@color/headmainColor"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/sendContact"
        android:layout_width="match_parent"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="Send to Circle Contact"
        android:layout_height="52dp"
        android:gravity="center_vertical"
        android:textColor="@color/main_color"
        android:textSize="15sp"
        android:drawableRight="@mipmap/icon_enter"
        />
    <View
        android:layout_width="match_parent"
        android:background="@color/headmainColor"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/addToEmail"
        android:layout_width="match_parent"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="Add to Email"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:layout_height="52dp"
        android:textColor="@color/main_color"
        android:textSize="15sp"
        android:drawableRight="@mipmap/icon_enter"
        />
    <View
        android:layout_width="match_parent"
        android:background="@color/headmainColor"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="1dp"/>
</LinearLayout>