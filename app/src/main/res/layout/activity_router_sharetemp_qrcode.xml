<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/color_efefef"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="@dimen/x660"
        android:layout_height="wrap_content"
        android:elevation="@dimen/x5"
        app:cardCornerRadius="@dimen/x16">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x257"
            android:src="@mipmap/invitation_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvRouterInvitationInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:lines="2"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/x52"
                android:text="Hzp"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tvRouterName"
                android:textSize="15sp"
                android:layout_marginTop="@dimen/x10"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_height="wrap_content" />
            <com.stratagile.pnrouter.view.ImageButtonWithText
                android:id="@+id/ivAvatarUser"
                android:layout_width="@dimen/x108"
                android:layout_marginTop="@dimen/x30"
                android:layout_height="@dimen/x108" />

            <TextView
                android:id="@+id/adminName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:layout_marginBottom="@dimen/x1"
                android:text="adminName"
                android:textColor="@color/color_b3b3b3"
                android:textSize="12sp" />
            <ImageView
                android:id="@+id/ivQrCode2"
                android:layout_width="@dimen/x375"
                android:layout_height="@dimen/x375"
                android:layout_marginTop="@dimen/x20"
                android:layout_marginBottom="@dimen/x40"/>

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x30"
                android:layout_marginBottom="@dimen/x20"
                android:text="Never expose the QR code to anyone!"
                android:textColor="@color/color_b3b3b3"
                android:textSize="12sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="@color/color_f2f2f2"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginRight="@dimen/x30"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/x30"
                android:gravity="center"
                android:layout_marginRight="@dimen/x30"
                android:layout_height="@dimen/x75">
                <ImageView
                    android:layout_width="@dimen/x30"
                    android:src="@mipmap/icon_sub_user"
                    android:layout_height="@dimen/x30" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_666666"
                    android:textSize="10sp"
                    android:layout_marginLeft="@dimen/x5"
                    android:gravity="center"
                    android:text="Open the QR code with Confidant app to join the circle"
                    android:layout_height="@dimen/x75" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x50"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSaveToPhone2"
            android:layout_width="0dp"
            android:layout_height="@dimen/x85"
            android:layout_weight="1"
            android:background="@drawable/btn_white"
            android:gravity="center"
            android:text="Save to Phone"
            android:textColor="@color/main_color" />

        <View
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x2" />

        <TextView
            android:id="@+id/tvShare2"
            android:layout_width="0dp"
            android:layout_height="@dimen/x85"
            android:layout_weight="1"
            android:background="@drawable/btn_maincolor"
            android:gravity="center"
            android:text="Share"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>