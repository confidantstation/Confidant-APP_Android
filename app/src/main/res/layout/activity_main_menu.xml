<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mRlMenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@color/headmainColor"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/llSort"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x150"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginTop="@dimen/x40"
        android:background="@color/headmainColor"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x60"
            android:padding="@dimen/x10"
            android:scaleType="centerCrop"
            android:src="@mipmap/statusbar_leftbar_h" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Circle"
                android:textColor="@color/textColor"
                android:textSize="16sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_below="@+id/title"
                android:text="@string/Nodename"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="10sp" />
        </LinearLayout>


    </LinearLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refreshLayoutleft"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="@dimen/x320">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewleft"
            android:background="@color/white"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.SwipeRefreshLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/x40"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@id/llSort"
        android:orientation="vertical">

        <com.stratagile.pnrouter.entity.MenuItemView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_menu_item"
            android:clickable="true"
            app:itemSrc="@mipmap/email_icon_selected"
            app:itemText="283619512@qq.com"/>

        <com.stratagile.pnrouter.entity.MenuItemView
            android:layout_marginTop="@dimen/x30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_menu_item"
            android:clickable="true"
            app:itemSrc="@mipmap/email_icon_selected"
            app:itemText="zhanglang108@sina.com"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/newAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@id/llSort"
        android:orientation="vertical">

        <com.stratagile.pnrouter.entity.MenuItemView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_menu_item"
            android:clickable="true"
            app:itemSrc="@mipmap/email_icon_addemail"
            app:itemText="New Account"/>

    </LinearLayout>

</LinearLayout>
