<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        
        <RelativeLayout
            android:layout_width="@dimen/x140"
            android:layout_marginTop="@dimen/x23"
            android:layout_height="@dimen/x140">
            <ImageView
                android:layout_width="@dimen/x140"
                android:src="@mipmap/group_head"
                android:layout_height="@dimen/x140" />
            <ImageView
                android:visibility="gone"
                android:id="@+id/ivModify"
                android:layout_width="@dimen/x38"
                android:src="@mipmap/icon_modify_group_name"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_height="@dimen/x38" />
        </RelativeLayout>

        <TextView
            android:id="@+id/groupName"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/x106"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_marginTop="@dimen/x23"
            android:layout_marginBottom="@dimen/x55"
            android:textColor="@color/black"
            android:layout_marginRight="@dimen/x106"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llGroupAlias"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/x25"
        android:gravity="center_vertical"
        android:layout_height="@dimen/x108">
        <TextView
            android:id="@+id/tvGroupNameTip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginLeft="@dimen/x30"
            android:text="Set Group Alias"
            />
        <View
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tvGroupAlias"
            android:layout_width="wrap_content"
            android:textColor="@color/color_808080"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="@dimen/x35"
            android:src="@mipmap/icon_enter"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginLeft="@dimen/x30"
            android:layout_height="@dimen/x35" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llGroupMembers"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/x25"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x31"
        android:paddingRight="@dimen/x31"
        android:layout_height="@dimen/x106">
        <TextView
            android:layout_width="0px"
            android:layout_weight="1"
            android:text="Group Members"
            android:textSize="15sp"
            android:textColor="@color/color_2c2c2c"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/select_people_number"
            android:layout_width="wrap_content"
            android:text=""
            android:layout_height="wrap_content" />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:paddingLeft="@dimen/x30"
        android:paddingRight="@dimen/x30"
        android:paddingBottom="@dimen/x25"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/llApproveInnvitationn"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/x25"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x31"
        android:paddingRight="@dimen/x31"
        android:layout_height="@dimen/x108">
        <TextView
            android:layout_width="0px"
            android:layout_weight="1"
            android:text="Approve Invitations"
            android:textSize="15sp"
            android:textColor="@color/color_2c2c2c"
            android:layout_height="wrap_content" />
        <Switch
            android:id="@+id/approveInvitation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/tvIntroduce"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/x31"
        android:textColor="@color/color_808080"
        android:textSize="11sp"
        android:layout_marginTop="@dimen/x20"
        android:text="Switch on if you would like to approve before new members are invited to your group by any group member."
        android:paddingRight="@dimen/x31"
        android:layout_height="wrap_content" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tvDismissGroup"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:textSize="15sp"
        android:text="Dismiss the Group"
        android:textColor="#F7625F"
        android:layout_marginTop="@dimen/x29"
        android:layout_height="@dimen/x108" />
    <TextView
        android:visibility="gone"
        android:id="@+id/tvLeaveGroup"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:textSize="15sp"
        android:text="Leave the Group"
        android:textColor="@color/color_2c2c2c"
        android:layout_marginTop="@dimen/x29"
        android:layout_height="@dimen/x108" />
</LinearLayout>