                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/Inbox"
                android:textColor="@color/mainColor"
                android:textSize="@dimen/commemTextSize" />
        </LinearLayout>

