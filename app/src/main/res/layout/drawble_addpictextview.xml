<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_shadow"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/x80"
        android:layout_height="@dimen/x80"
        android:src="@mipmap/rouermanagement"
        android:layout_marginLeft="@dimen/x30"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/commemTextSize"
            android:textColor="@color/color_2c2c2c"
            tools:text="Create a Group"
            />
        <TextView
            android:visibility="gone"
            android:id="@+id/righttitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/color_2c2c2c"
            tools:text="Create a group to share ideas with more friends"

            />
    </LinearLayout>
    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />

    <ImageView
        android:id="@+id/ivNext"
        android:layout_width="@dimen/x30"
        android:layout_height="@dimen/x30"
        android:src="@mipmap/tabbar_arrow_right"
        android:layout_marginRight="@dimen/x30"
        />
</LinearLayout>