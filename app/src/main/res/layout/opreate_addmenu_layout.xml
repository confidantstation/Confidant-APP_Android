<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/ll_popup"
        android:layout_marginTop="@dimen/x180"
        android:layout_marginLeft="@dimen/x200"
        android:layout_marginRight="@dimen/x80"
        android:background="@drawable/dialog_shadow_alpha"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="10"
        android:shadowColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_file"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/fileIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/fileName"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x100"
                android:singleLine="true"
                android:ellipsize="middle"
                android:maxEms="20"
                android:gravity="center"
                android:textColor="@color/main_color"
                android:textSize="14sp" />
        </LinearLayout>
        <View style="@style/divide_line_nomarge"/>
        <android.support.v7.widget.RecyclerView
            android:layout_margin="@dimen/x30"
            android:id="@+id/recyclerView"
            android:background="@drawable/dialog_shadow_alpha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

</RelativeLayout>