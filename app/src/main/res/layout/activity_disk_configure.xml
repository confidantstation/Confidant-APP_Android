<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f5f5"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llRaid1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingTop="@dimen/x18"
        android:paddingBottom="@dimen/x18">

        <ImageView
            android:id="@+id/checkRaid1"
            android:layout_width="@dimen/x46"
            android:layout_height="@dimen/x46"
            android:layout_marginLeft="@dimen/x31"
            android:src="@mipmap/ic_verified" />

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x31"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RAID 1"
                android:textColor="@color/color_2B2B2B"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Erase data and format, with data protection"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivRaid1"
            android:layout_width="@dimen/x70"
            android:layout_height="@dimen/x70"
            android:scaleType="center"
            android:src="@mipmap/arrow_upper" />
    </LinearLayout>

    <TextView
        android:id="@+id/detailRaid1"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/x106"
        android:paddingRight="@dimen/x31"
        android:text="The two hard disks are automatically mirrored. When any of the disks is damaged, it can be simply replaced by a new disk. It is the recommended ultimate mode for data security. "
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/llBasic"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/x18"
        android:paddingBottom="@dimen/x18">

        <ImageView
            android:id="@+id/checkBasic"
            android:layout_width="@dimen/x46"
            android:layout_height="@dimen/x46"
            android:layout_marginLeft="@dimen/x31"
            android:src="@mipmap/ic_verified" />

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x31"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BASIC"
                android:textColor="@color/color_2B2B2B"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Erase data and format, with data protection"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivBasic"
            android:layout_width="@dimen/x70"
            android:layout_height="@dimen/x70"
            android:scaleType="center"
            android:src="@mipmap/arrow_upper" />
    </LinearLayout>

    <TextView
        android:id="@+id/detailBasic"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/x106"
        android:paddingRight="@dimen/x31"
        android:text="Master-slave mode, the slave disk is mounted to the disk directory. "
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/llRaid0"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/x18"
        android:paddingBottom="@dimen/x18">

        <ImageView
            android:id="@+id/checkRaid0"
            android:layout_width="@dimen/x46"
            android:layout_height="@dimen/x46"
            android:layout_marginLeft="@dimen/x31"
            android:src="@mipmap/ic_verified" />

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x31"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RAID 0"
                android:textColor="@color/color_2B2B2B"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Erase data and format, with data protection"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivRaid0"
            android:layout_width="@dimen/x70"
            android:layout_height="@dimen/x70"
            android:scaleType="center"
            android:src="@mipmap/arrow_upper" />
    </LinearLayout>

    <TextView
        android:id="@+id/detailRaid0"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/x106"
        android:paddingRight="@dimen/x31"
        android:text="The two hard disks are virtually merged into one, the overall capacity doubles with fast access speed. BUT, if any of the disks is damaged, the data of the other disk will be lost. "
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/llLvm"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/x18"
        android:paddingBottom="@dimen/x18">

        <ImageView
            android:id="@+id/checkLvm"
            android:layout_width="@dimen/x46"
            android:layout_height="@dimen/x46"
            android:layout_marginLeft="@dimen/x31"
            android:src="@mipmap/ic_verified" />

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x31"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LVM"
                android:textColor="@color/color_2B2B2B"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Erase data and format, with data protection"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivLvm"
            android:layout_width="@dimen/x70"
            android:layout_height="@dimen/x70"
            android:scaleType="center"
            android:src="@mipmap/arrow_upper" />
    </LinearLayout>

    <TextView
        android:id="@+id/detailLvm"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/x106"
        android:paddingRight="@dimen/x31"
        android:text="All hard disks are merged into one virtual disk, the overall capacity is the sum of that of the two disks. This way enables adding in a new disk without any changes to the directory structure. "
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/llAddToRaid1"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/x18"
        android:paddingBottom="@dimen/x18">

        <ImageView
            android:id="@+id/checkAddToRaid1"
            android:layout_width="@dimen/x46"
            android:layout_height="@dimen/x46"
            android:layout_marginLeft="@dimen/x31"
            android:src="@mipmap/ic_verified" />

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x31"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD TO RAID 1"
                android:textColor="@color/color_2B2B2B"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Erase data and format, with data protection"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llAddToLvm"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/x18"
        android:paddingBottom="@dimen/x18">

        <ImageView
            android:id="@+id/checkAddToLvm"
            android:layout_width="@dimen/x46"
            android:layout_height="@dimen/x46"
            android:layout_marginLeft="@dimen/x31"
            android:src="@mipmap/ic_verified" />

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x31"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD TO LVM"
                android:textColor="@color/color_2B2B2B"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Erase data and format, with data protection"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>