<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="@dimen/x288"
        android:gravity="center"
        android:background="@drawable/ease_recording_hint_bg"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_height="@dimen/x288">
        <ImageView
            android:id="@+id/mic_image"
            android:layout_width="@dimen/x108"
            android:layout_height="@dimen/x108"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ease_record_animate_01" />

        <TextView
            android:id="@+id/recording_hint"
            android:layout_width="@dimen/x250"
            android:layout_height="@dimen/x54"
            android:layout_below="@id/mic_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/x40"
            android:textColor="@color/white"
            android:gravity="center"
            android:padding="2dp"
            android:text="@string/move_up_to_cancel"
            android:textSize="10sp" />
    </RelativeLayout>

</RelativeLayout>