<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="@dimen/x123"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingRight="@dimen/x31"
        android:paddingLeft="@dimen/x31"
        android:gravity="center_vertical"
        android:layout_height="@dimen/x122">

        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x60"
            android:src="@mipmap/icon_ppt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/checkBox"
            app:layout_constraintTop_toBottomOf="@+id/tvFileTime" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/x4"
            android:layout_marginBottom="@dimen/x2"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvFileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:maxEms="10"
                android:singleLine="true"
                android:text="Google project development.zip"
                android:textColor="@color/color_2B2B2B"
                android:textSize="@dimen/commemTextSize"/>

            <TextView
                android:id="@+id/tvFileSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/color_808080"
                android:text="244k" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/viewLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginLeft="@dimen/x95"
        android:background="@color/color_f2f2f2"/>

</LinearLayout>