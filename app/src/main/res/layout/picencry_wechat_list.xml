<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x450">
        <ImageView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/x15"
            android:layout_height="wrap_content"
            android:src="@mipmap/wechat"/>
        <TextView
            android:id="@+id/chatName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginRight="@dimen/x40"
            android:layout_centerInParent="true"
            android:paddingTop="@dimen/x180"
            android:textSize="16sp"
            android:text="聊天记录"/>
        <TextView
            android:id="@+id/fileSizeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="16sp"
            android:textColor="#9496A1"
            android:layout_below="@+id/chatName"
            android:text="100K"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_weight="1"
        android:id="@+id/recyclerViewNodeMenu"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
    <com.stratagile.pnrouter.view.DrawableEnTextView
        android:id="@+id/addMenuItem"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x150"
        app:srcmy="@mipmap/encryption_add_pictures"
        app:textmy="@string/album_encryption">
    </com.stratagile.pnrouter.view.DrawableEnTextView>
    <LinearLayout
        android:id="@+id/llOperate"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/x50"
        android:layout_marginRight="@dimen/x50"
        android:layout_marginTop="@dimen/x50"
        android:layout_marginBottom="@dimen/x40"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/createFolder"
            android:visibility="gone"
            android:layout_width="0dp"
            android:textSize="16sp"
            android:layout_weight="1"
            android:textColor="@color/loginbtnColor"
            android:background="@drawable/btn_whitestroke"
            android:text="@string/Create_Folder"
            android:gravity="center"
            android:layout_height="@dimen/x85"
            />
        <View
            android:visibility="gone"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x2"/>

        <TextView
            android:id="@+id/selectbtn"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/btn_maincolor2"
            android:text="@string/collection"
            android:layout_height="@dimen/x85" />
    </LinearLayout>
</LinearLayout>