<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/color_efefef"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/x28"
        android:layout_marginLeft="@dimen/x50"
        app:cardCornerRadius="@dimen/x5"
        app:cardElevation="@dimen/x5"
        android:layout_marginRight="@dimen/x50"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/x40"
                android:layout_marginBottom="@dimen/x40"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="match_parent"
                    android:textSize="17sp"
                    android:text="Format the hard disk"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_2c2c2c"
                    android:layout_height="wrap_content" />

           </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/color_ebebeb"
                android:layout_height="@dimen/x1" />
            <ImageView
                android:id="@+id/ivQrCodeMy"
                android:layout_width="wrap_content"
                android:src="@mipmap/juxing"
                android:layout_marginTop="@dimen/x60"
                android:layout_marginBottom="@dimen/x40"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="@dimen/x560"
                android:textSize="17sp"
                android:text="Please note you will have to format the hard disk before reconfiguring it. "
                android:gravity="center"
                android:layout_centerVertical="true"
                android:textColor="@color/color_2c2c2c"
                android:layout_marginBottom="@dimen/x60"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="match_parent"
                android:background="@color/color_ebebeb"
                android:layout_height="@dimen/x1" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/tipscheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x20"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_marginBottom="@dimen/x20"
                    android:button="@drawable/checkbox_style"
                    />
                <TextView
                    android:layout_width="@dimen/x500"
                    android:layout_marginTop="@dimen/x5"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginBottom="@dimen/x20"
                    android:textSize="12sp"
                    android:textColor="@color/color_b3b3b3"
                    android:layout_height="wrap_content"
                    android:text="@string/erase"
                    />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/x50"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/Confirm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/btn_maincolor"
            android:text="Confirm"
            android:layout_height="@dimen/x85" />
    </LinearLayout>
</LinearLayout>