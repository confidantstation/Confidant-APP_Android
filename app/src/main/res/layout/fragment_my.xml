<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_f2f2f2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/toDetail"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/status" />
    <TextView
        android:id="@+id/nickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x30"
        android:layout_marginTop="@dimen/x40"
        android:text="@string/my"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x16"
        android:src="@mipmap/icon_qr_code"
        app:layout_constraintStart_toStartOf="@+id/nickName"
        app:layout_constraintTop_toBottomOf="@+id/nickName" />

    <ImageView
        android:id="@+id/avatar"
        android:src="@mipmap/icon_twitter"
        android:layout_width="@dimen/x124"
        android:layout_height="@dimen/x124"
        android:layout_marginEnd="@dimen/x30"
        android:layout_marginTop="@dimen/x46"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view2"
        style="@style/divide_line"
        android:layout_marginTop="@dimen/x44"
        app:layout_constraintTop_toBottomOf="@+id/avatar" />

    <com.stratagile.pnrouter.view.DrawableTextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x70"
        app:text="@string/addRecentStatus"
        app:showNext="false"
        app:layout_constraintTop_toBottomOf="@+id/view2">

    </com.stratagile.pnrouter.view.DrawableTextView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x30"
        android:background="@color/white"

        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/status">

        <com.stratagile.pnrouter.view.DrawableTextView
            android:id="@+id/routerManagement"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x92"
            app:text="@string/routerManagement">

        </com.stratagile.pnrouter.view.DrawableTextView>

        <View
            android:id="@+id/view3"
            style="@style/divide_line" />

        <com.stratagile.pnrouter.view.DrawableTextView
            android:id="@+id/collection"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x92"
            app:layout_constraintTop_toBottomOf="@+id/view3"
            app:text="@string/collection">

        </com.stratagile.pnrouter.view.DrawableTextView>

        <View style="@style/divide_line" />

        <com.stratagile.pnrouter.view.DrawableTextView
            android:id="@+id/shareApp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x92"
            app:text="@string/shareApp">

        </com.stratagile.pnrouter.view.DrawableTextView>

        <View style="@style/divide_line" />

        <com.stratagile.pnrouter.view.DrawableTextView
            android:id="@+id/help"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x92"
            app:text="@string/help">

        </com.stratagile.pnrouter.view.DrawableTextView>
    </LinearLayout>

    <com.stratagile.pnrouter.view.DrawableTextView
        android:id="@+id/Version"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x92"
        android:layout_marginTop="@dimen/x30"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:text="V">

    </com.stratagile.pnrouter.view.DrawableTextView>
</android.support.constraint.ConstraintLayout>