<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/main_color"
        android:gravity="center"
        android:textColor="@color/color_333"
        android:textSize="9sp" />

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_below="@+id/statusBar"
        android:background="@drawable/navigation_shape"
        android:minHeight="?attr/actionBarSize"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/llSort"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Sort"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="@dimen/x20"
                android:src="@mipmap/icon_back"
                android:rotation="-90"
                android:scaleType="centerCrop"
                android:layout_marginLeft="@dimen/x5"
                android:layout_height="@dimen/x20" />
        </LinearLayout>
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="ddddd"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x22"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/mainIv1"
                android:layout_width="@dimen/x40"
                android:visibility="gone"
                android:src="@mipmap/icon_download"
                android:layout_marginRight="@dimen/x30"
                android:layout_height="@dimen/x40" />
            <ImageView
                android:id="@+id/ivQrCode"
                android:layout_toRightOf="@+id/mainIv1"
                android:layout_centerHorizontal="true"
                android:visibility="invisible"
                android:layout_width="@dimen/x40"
                android:src="@mipmap/icon_scan"
                android:layout_height="@dimen/x40"
                android:scaleType="fitCenter"
                />
        </RelativeLayout>


    </RelativeLayout>

    <TextView
        android:id="@+id/reConnect"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:text="ReConnectting..."
        android:paddingLeft="@dimen/x30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x90" />

    <android.support.v4.view.ViewPager
        android:layout_below="@+id/rl1"
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_above="@+id/rl2"
        android:layout_weight="1"
        android:layout_height="0px">

    </android.support.v4.view.ViewPager>

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100">
        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottomNavigation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            app:itemIconSize="@dimen/x40"
            app:elevation="0px"
            app:labelVisibilityMode="labeled"
            app:itemTextAppearanceActive="@style/BottomNavigationViewTextAppearance"
            app:itemTextAppearanceInactive="@style/BottomNavigationViewTextAppearance"
            app:itemIconTint="@drawable/bottom_navigation_selector"
            app:itemTextColor="@drawable/bottom_navigation_selector"
            app:menu="@menu/menu_bottom_navigation" />
    </RelativeLayout>
</LinearLayout>
