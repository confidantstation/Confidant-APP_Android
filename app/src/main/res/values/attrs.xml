<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--透明渐变的TabView-->
    <declare-styleable name="AlphaView">
        <attr name="av_tabIconNormal" format="reference"/>
        <attr name="av_tabIconSelected" format="reference"/>
        <attr name="av_tabText" format="string"/>
        <attr name="av_tabTextSize" format="dimension"/>
        <attr name="av_textColorNormal" format="color"/>
        <attr name="av_textColorSelected" format="color"/>
    </declare-styleable>
    <declare-styleable name="DrawableMyTextView">
        <attr name="textmy" format="string"/>
        <attr name="subtitle" format="string"/>
        <attr name="textSizemy" format="dimension"/>
        <attr name="textColormy" format="reference"/>
        <attr name="showNextmy" format="boolean"/>
        <attr name="srcmy" format="reference"/>
    </declare-styleable>
    <declare-styleable name="DrawableTextView">
        <attr name="text" format="string"/>
        <attr name="textSize" format="dimension"/>
        <attr name="textColor2" format="reference"/>
        <attr name="showNext" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="DetailView">
        <attr name="text1" format="string"/>
        <attr name="textSize1" format="dimension"/>
        <attr name="textColor1" format="reference"/>
        <attr name="showNext1" format="boolean"/>
        <attr name="showImg" format="boolean"/>
        <attr name="src" format="reference"/>
        <attr name="contentStr" format="string"/>
    </declare-styleable>

    <declare-styleable name="SwipeBackLayout">
        <attr name="edge_size" format="dimension"/>
        <attr name="edge_flag">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
            <enum name="bottom" value="2" />
            <enum name="all" value="3" />
        </attr>
        <attr name="shadow_left" format="reference"/>
        <attr name="shadow_right" format="reference"/>
        <attr name="shadow_bottom" format="reference"/>
    </declare-styleable>

    <attr name="SwipeBackLayoutStyle" format="reference"/>

    <declare-styleable name="ImageButtonWithText">
        <attr name="picture" format="reference"/>
        <attr name="imageButtonTextSize" format="float"/>
        <attr name="withShape" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="AVLoadingIndicatorView">
        <attr name="minWidth" format="dimension" />
        <attr name="maxWidth" format="dimension"/>
        <attr name="minHeight" format="dimension" />
        <attr name="maxHeight" format="dimension"/>
        <attr name="indicatorName" format="string"/>
        <attr name="indicatorColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="SmoothCheckBox">
        <attr name="duration" format="integer"/>
        <attr name="stroke_width" format="dimension"/>
        <attr name="color_tick" format="color"/>
        <attr name="color_checked" format="color"/>
        <attr name="color_unchecked" format="color"/>
        <attr name="color_unchecked_stroke" format="color"/>
    </declare-styleable>
    <declare-styleable name="MenuItemView">
        <attr name="itemText" format="string|reference"/>
        <attr name="itemCount" format="string|reference"/>
        <attr name="itemSrc" format="reference"/>
    </declare-styleable>
    <declare-styleable name="ColorPickerView">
        <attr name="indicatorColorPicker" format="color" /><!--指示点颜色-->
        <attr name="indicatorEnable" format="boolean" /><!--是否启用指示点-->
        <attr name="orientationPicker" format="integer">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
    </declare-styleable>
    <declare-styleable name="BubbleLayout">
        <attr name="background_color" format="color" />
        <attr name="shadow_color" format="color" />
        <attr name="shadow_size" format="dimension" />
        <attr name="radius" format="dimension" />
        <attr name="direction" format="enum">
            <enum name="left" value="1" />
            <enum name="top" value="2" />
            <enum name="right" value="3" />
            <enum name="bottom" value="4" />
        </attr>
        <attr name="offset" format="dimension" />
    </declare-styleable>
    <attr name="picture.checked.style" format="reference" />
</resources>